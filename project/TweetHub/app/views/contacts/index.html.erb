<h2>Contact Form</h2>

<%= form_for(@contact) do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Name ", required: true%>
    <br/>
    <label>Email id </label>
    <%= f.text_field :email, class: "form-control", placeholder: "Email", required: true%>
    <br/>
    <label>Feedback </label>
    <%= f.text_area :feedback, class: "form-control", placeholder: "Feedback", required: true%>
    <br/>
    <%= f.submit text: "send", class: "btn btn-primary"%>
  </div>
<% end %>
